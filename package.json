{
    "name": "eyetracking-virtual-keyboard",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "eslint": "^6.6.0",
        "eslint-config-airbnb": "^18.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-react": "^7.21.5",
        "eyetracking": "^3.0.1",
        "rc-slider": "^9.7.1",
        "react": "^17.0.0",
        "react-dom": "^17.0.0",
        "react-dropdown": "^1.9.2",
        "react-scripts": "3.4.4",
        "react-simple-keyboard": "^2.5.57",
        "react-toggle": "^4.1.1",
        "simple-keyboard-layouts": "^1.15.165"
    },
    "homepage": "./",
    "main": "src/start.js",
    "scripts": {
        "start": "nf start -p 3000",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "electron-start": "node src/start-react",
        "react-start": "react-scripts start",
        "pack": "build --dir",
        "dist": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "rebuild-eyetracking": "cd ./node_modules/eyetracking/cpp && set HOME=~/.electron-gyp && node-gyp rebuild --target=10.1.4 --arch=x64 --dist-url=https://electronjs.org/headers",
        "build-electron": "mkdir ./build/electron && robocopy electron build/electron /S",
        "setup-env": "node ./scripts/setup-env.js"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron": "^10.1.4",
        "electron-builder": "^22.9.1",
        "electron-rebuild": "^2.3.4"
    },
    "build": {
        "appId": "com.electron.electron-with-eyetracking-react-app",
        "productName": "Trung Bach eyetracking app",
        "target": "NSIS",
        "directories": {
            "buildResources": "public"
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false
        },
        "extends": null,
        "files": [
            "dist/**/*",
            "build/**/*",
            "package.json",
            "./src/start.js"
          ]
    }
}
